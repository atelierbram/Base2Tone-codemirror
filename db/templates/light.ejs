.cm-s-<%- scheme %>-light.CodeMirror { background: #<%- base["C7"]["hex"] %>; color: #<%- base["D4"]["hex"] %>; }
.cm-s-<%- scheme %>-light div.CodeMirror-selected { background: #<%- base["C6"]["hex"] %> !important; }
.cm-s-<%- scheme %>-light .CodeMirror-gutters { background: #<%- base["C7"]["hex"] %>; border-right: 0px; }
.cm-s-<%- scheme %>-light .CodeMirror-linenumber { color: #<%- base["C5"]["hex"] %>; }

/* begin cursor */
.cm-s-<%- scheme %>-light .CodeMirror-cursor { border-left: 1px solid #<%- base["B5"]["hex"] %>; /* border-left: 1px solid #<%- base["B5"]["hex"] %>80; */ border-right: .5em solid #<%- base["B5"]["hex"] %>; /* border-right: .5em solid #<%- base["B5"]["hex"] %>80; */ opacity: .5; }
.cm-s-<%- scheme %>-light .CodeMirror-activeline-background { background: #<%- base["C6"]["hex"] %>;  /* background: #<%- base["C6"]["hex"] %>80; */ opacity: .5; }
.cm-s-<%- scheme %>-light .cm-fat-cursor .CodeMirror-cursor { background: #<%- base["B5"]["hex"] %>; /* #<%- base["B5"]["hex"] %>80; */ opacity: .5; }
/* end cursor */

.cm-s-<%- scheme %>-light span.cm-atom, .cm-s-<%- scheme %>-light span.cm-number, .cm-s-<%- scheme %>-light span.cm-keyword, .cm-s-<%- scheme %>-light span.cm-variable, .cm-s-<%- scheme %>-light span.cm-attribute, .cm-s-<%- scheme %>-light span.cm-quote, .cm-s-duotone-light-light span.cm-hr, .cm-s-duotone-light-light span.cm-link { color: #<%- base["B0"]["hex"] %>; }

.cm-s-<%- scheme %>-light span.cm-property { color: #<%- base["D4"]["hex"] %>; }
.cm-s-<%- scheme %>-light span.cm-punctuation, .cm-s-<%- scheme %>-light span.cm-unit, .cm-s-<%- scheme %>-light span.cm-negative { color: #<%- base["B0"]["hex"] %>; }
.cm-s-<%- scheme %>-light span.cm-string, .cm-s-<%- scheme %>-light span.cm-operator { color: #<%- base["B2"]["hex"] %>; }
.cm-s-<%- scheme %>-light span.cm-positive { color: #<%- base["D2"]["hex"] %>; }

.cm-s-<%- scheme %>-light span.cm-variable-2, .cm-s-<%- scheme %>-light span.cm-variable-3, .cm-s-<%- scheme %>-light span.cm-string-2, .cm-s-<%- scheme %>-light span.cm-url { color: #<%- base["D2"]["hex"] %>; }
.cm-s-<%- scheme %>-light span.cm-def, .cm-s-<%- scheme %>-light span.cm-tag, .cm-s-<%- scheme %>-light span.cm-builtin, .cm-s-<%- scheme %>-light span.cm-qualifier, .cm-s-<%- scheme %>-light span.cm-header, .cm-s-<%- scheme %>-light span.cm-em { color: #<%- base["D0"]["hex"] %>; }
.cm-s-<%- scheme %>-light span.cm-bracket, .cm-s-<%- scheme %>-light span.cm-comment { color: #<%- base["C4"]["hex"] %>; }

/* using #f00 red for errors, don't think any of the colorscheme variables will stand out enough, ... maybe by giving it a background-color ... */
/* .cm-s-<%- scheme %>-light span.cm-error { background: #<%- base["D2"]["hex"] %>; color: #728fcb; } */
.cm-s-<%- scheme %>-light span.cm-error, .cm-s-<%- scheme %>-light span.cm-invalidchar { color: #f00; }

.cm-s-<%- scheme %>-light span.cm-header { font-weight: normal; }
.cm-s-<%- scheme %>-light .CodeMirror-matchingbracket { text-decoration: underline; color: #<%- base["C7"]["hex"] %> !important; }
